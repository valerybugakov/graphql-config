{
  "name": "graphql-config",
  "version": "3.0.0-rc.2",
  "description": "The easiest way to configure your development environment with your GraphQL schema (supported by most tools, editors & IDEs)",
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "exports": {
    "require": "dist/index.cjs.js",
    "default": "dist/index.mjs"
  },
  "scripts": {
    "prepublishOnly": "yarn build",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "bob build --single",
    "prepack": "bob prepack",
    "now-build": "(cd website && yarn && yarn build && mv build ../public)",
    "format": "prettier --write \"{src,test}/**/*.{ts,graphql}\"",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "test": "jest",
    "release": "npm publish dist",
    "release:canary": "yarn build && node ./scripts/canary.js && npm publish dist --tag canary"
  },
  "peerDependencies": {
    "graphql": "^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0 || ^15.0.0"
  },
  "dependencies": {
    "@graphql-toolkit/common": "~0.10.2",
    "@graphql-toolkit/core": "~0.10.2",
    "@graphql-toolkit/graphql-file-loader": "~0.10.2",
    "@graphql-toolkit/json-file-loader": "~0.10.2",
    "@graphql-toolkit/schema-merging": "~0.10.2",
    "@graphql-toolkit/url-loader": "~0.10.2",
    "cosmiconfig": "6.0.0",
    "globby": "11.0.0",
    "minimatch": "3.0.4",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@graphql-toolkit/common": "0.10.3",
    "@graphql-toolkit/core": "0.10.3",
    "@graphql-toolkit/graphql-file-loader": "0.10.3",
    "@graphql-toolkit/json-file-loader": "0.10.3",
    "@graphql-toolkit/schema-merging": "0.10.3",
    "@types/jest": "25.2.1",
    "@types/nock": "11.1.0",
    "@types/node": "13.11.0",
    "@types/node-fetch": "2.5.5",
    "@typescript-eslint/parser": "2.27.0",
    "bob-the-bundler": "1.0.0-rc.13",
    "del": "5.1.0",
    "eslint": "6.8.0",
    "graphql": "15.0.0",
    "husky": "4.2.3",
    "jest": "25.3.0",
    "lint-staged": "10.1.2",
    "make-dir": "3.0.2",
    "nock": "12.0.3",
    "parent-module": "2.0.0",
    "prettier": "2.0.4",
    "read-pkg": "5.2.0",
    "rimraf": "3.0.2",
    "ts-jest": "25.3.1",
    "tslib": "1.11.1",
    "typescript": "3.8.3",
    "write-pkg": "4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kamilkisiela/graphql-config.git"
  },
  "homepage": "https://graphql-config.com",
  "keywords": [
    "graphql",
    "config",
    "relay",
    "apollo"
  ],
  "author": {
    "email": "kamil.kisiela@gmail.com",
    "name": "Kamil Kisiela",
    "url": "https://github.com/kamilkisiela"
  },
  "license": "MIT",
  "lint-staged": {
    "{src,test}/**/*.{ts,graphql}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">= 10.0.0"
  }
}
